/** * Created by SUNPENGWEI128 on 2016-10-24. */import java.io.*;import org.wltea.analyzer.core.IKSegmenter;import org.wltea.analyzer.core.Lexeme;public class Iktest1 {    public static void main(String[] args) throws IOException {        String text="基于java语言开发的轻量级的中文分词工具包朝阳村工行宿舍\n" +                "德胜二区";        StringReader sr=new StringReader(text);        IKSegmenter ik=new IKSegmenter(sr, true);        Lexeme lex=null;        while((lex=ik.next())!=null){            System.out.print(lex.getLexemeText()+" ");        }        System.out.print("\n");        String text1="基于java语言开发的轻量级的中文分词工具包";        StringReader sr1=new StringReader(text1);        IKSegmenter ik1=new IKSegmenter(sr1, false);        Lexeme lex1=null;        while((lex1=ik1.next())!=null){            System.out.print(lex1.getLexemeText()+" ");        }//        String fileName = "D:\\Users\\SUNPENGWEI128\\selfMaterial\\installSofware\\javaWorkStation\\isolrTest1\\src\\resource/mydict.dic";//        String content = "D:\\Users\\SUNPENGWEI128\\selfMaterial\\installSofware\\javaWorkStation\\isolrTest1\\src\\resource/mydict.out";        String fileName = "D:\\Users\\SUNPENGWEI128\\selfMaterial\\installSofware\\javaWorkStation\\isolrTest1\\src\\resource/test1.txt";        String content = "test1.out";        readFileByLines(fileName,content);//        appendMethodB(fileName, "append end. \n");    }    public static void readFileByLines(String fileName,String fileName0) {//        StringReader sr=new StringReader(text);        File file = new File(fileName);        BufferedReader reader = null;        try {            System.out.println("以行为单位读取文件内容，一次读一整行：");            reader = new BufferedReader(new FileReader(file));            String tempString = null;            int line = 1;            // 一次读入一行，直到读入null为文件结束//            while ((tempString = reader.readLine()) != null) {//                // 显示行号//                System.out.println("line " + line + ": " + tempString);//                line++;//            }            while ((tempString = reader.readLine()) != null) {                // 显示行号                StringReader sr=new StringReader(tempString);                IKSegmenter ik=new IKSegmenter(sr, false);                appendMethodB(fileName0,"\nline " + line+"**"+tempString+"**分词结果为：\n");                Lexeme lex=null;                while((lex=ik.next())!=null){//                    System.out.print(lex.getLexemeText()+" ");                    appendMethodB(fileName0, lex.getLexemeText()+" ");                }                line++;            }            reader.close();        } catch (IOException e) {            e.printStackTrace();        } finally {            if (reader != null) {                try {                    reader.close();                } catch (IOException e1) {                }            }        }    }    public static void appendMethodB(String fileName, String content) {        try {            //打开一个写文件器，构造函数中的第二个参数true表示以追加形式写文件            FileWriter writer = new FileWriter(fileName, true);            writer.write(content);            writer.close();        } catch (IOException e) {            e.printStackTrace();        }    }}
